#!/usr/bin/env python
import os
import sys

def get_full_path(path):
    module_dir = os.path.dirname(__file__)
    new_path = os.path.join(module_dir, path)
    return os.path.abspath(new_path)

def main():
    package_path = get_full_path('..')
    sys.path.insert(0, package_path)
    launchit = __import__('launchit')
    launchit.gui.main()

if __name__ == '__main__':
    main()
